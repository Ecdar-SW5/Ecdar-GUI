<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Path?>
<?import javafx.scene.control.ScrollPane?>
<?import com.jfoenix.controls.JFXButton?>
<fx:root xmlns:fx="http://javafx.com/fxml/1"
         xmlns="http://javafx.com/javafx/8.0.76-ea"
         type="StackPane"
         fx:controller="ecdar.controllers.MultiSyncTagController">
    <Path id="shape" StackPane.alignment="CENTER_LEFT" strokeType="INSIDE"/>

    <VBox alignment="BOTTOM_CENTER">
        <ScrollPane id="scrollPane"
                    fitToWidth="true"
                    fitToHeight="true"
                    hbarPolicy="NEVER"
                    AnchorPane.topAnchor="0"
                    AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0"
                    styleClass="scroll-pane">
            <VBox fx:id="syncList">
            </VBox>
        </ScrollPane>
        <JFXButton fx:id="addSyncBtn" text="Add sync" prefWidth="Infinity"/>
    </VBox>
</fx:root>