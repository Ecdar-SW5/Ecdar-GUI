<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXRippler?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root xmlns:fx="http://javafx.com/fxml/1"
         xmlns="http://javafx.com/javafx/8.0.76-ea"
         type="StackPane"
         fx:id="root"
         fx:controller="ecdar.controllers.ProjectPaneController"
         minWidth="300">

    <AnchorPane>

        <!-- Toolbar -->
        <AnchorPane fx:id="toolbar" minHeight="56" maxHeight="56"
                    AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <StackPane AnchorPane.leftAnchor="16" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
                <Label fx:id="toolbarTitle"
                       styleClass="title"
                       text="Project"/>
            </StackPane>

            <HBox AnchorPane.rightAnchor="48" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
                <!-- CREATE SYSTEM -->
                <JFXRippler fx:id="createSystem">
                    <StackPane minWidth="40" maxHeight="40" onMouseClicked="#createSystemClicked">
                        <StackPane fx:id="createSystemPane" minWidth="23" maxWidth="23" minHeight="30" maxHeight="30">
                            <ImageView fx:id="createSystemImage" />
                        </StackPane>
                    </StackPane>
                </JFXRippler>
            </HBox>

            <HBox AnchorPane.rightAnchor="8" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
                <!-- CREATE COMPONENT -->
                <JFXRippler fx:id="createComponent">
                    <StackPane minWidth="40" maxHeight="40" onMouseClicked="#createComponentClicked">
                        <StackPane fx:id="createComponentPane" minWidth="23" maxWidth="23" minHeight="30" maxHeight="30">
                            <ImageView fx:id="createComponentImage" />
                        </StackPane>
                    </StackPane>
                </JFXRippler>
            </HBox>

        </AnchorPane>

        <ScrollPane fx:id="scrollPane"
                    fitToHeight="true" fitToWidth="true"
                    AnchorPane.topAnchor="56"
                    AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0"
                    styleClass="edge-to-edge" >

            <VBox>
                <VBox fx:id="filesList">
                    <!-- Files goes here -->
                </VBox>

                    <HBox styleClass="generatedComponents" alignment="CENTER_LEFT">
                        <padding>
                            <Insets top="5" bottom="5" left="20" right="20"/>
                        </padding>
                        <Text>
                            Generated Components
                        </Text>
                        <Region minWidth="60" maxWidth="60"/>
                        <JFXRippler fx:id="generatedComponentsVisibilityButton">
                            <StackPane minWidth="40" maxWidth="40" minHeight="40" maxHeight="40" onMouseClicked="#setGeneratedComponentsVisibilityButtonClicked">
                                <FontIcon fx:id="generatedComponentsVisibilityButtonIcon" iconLiteral="gmi-expand-less" iconSize="24"/>
                            </StackPane>
                        </JFXRippler>
                    </HBox>

                <VBox fx:id="tempFilesList">
                    <!-- Temporary files goes here -->
                </VBox>
            </VBox>

        </ScrollPane>

    </AnchorPane>
</fx:root>